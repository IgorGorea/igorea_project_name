<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
    <Appenders>
        <RollingFile name="AllLogsFileAppender" fileName="target/logs/all/all_logs-${date:MM-dd-yyyy-HH-mm-ss}.log"
                     filePattern="logs/all_logs-%d{MM-dd-yyyy}-%i.log.gz">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%t] %-5level %logger{36} - %msg%n"/>
            <Policies>
                <SizeBasedTriggeringPolicy size="3 MB"/>
            </Policies>
            <DefaultRolloverStrategy max="10"/> <!-- Maximum number of files to keep -->
            <Delete basePath="logs" maxDepth="1">
            <IfFileName glob="all_logs-*.log" />
            <IfLastModified age="7d" />
            </Delete>
        </RollingFile>

        <RollingFile name="InfoLogsFileAppender" fileName="target/logs/info/info_logs-${date:MM-dd-yyyy-HH-mm-ss}.log"
                     filePattern="logs/info_logs-%d{MM-dd-yyyy}-%i.log.gz">
            <ThresholdFilter level="INFO" onMatch="ACCEPT" onMismatch="DENY"/>
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%t] %-5level %logger{36} - %msg%n"/>
            <Policies>
                <SizeBasedTriggeringPolicy size="3 MB"/>
            </Policies>
            <DefaultRolloverStrategy max="10"/> <!-- Maximum number of files to keep -->
            <Delete basePath="logs" maxDepth="1">
                <IfFileName glob="all_logs-*.log" />
                <IfLastModified age="7d" />
            </Delete>
            <DefaultRolloverStrategy max="10"/>
        </RollingFile>

        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>
    </Appenders>

    <Loggers>
        <Root level="debug">
            <AppenderRef ref="AllLogsFileAppender"/>
            <AppenderRef ref="InfoLogsFileAppender"/>
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>
